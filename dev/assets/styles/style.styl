@charset "UTF-8"

// base
// -----------------------------------------
@import "base/normalize"
@import "base/flex-grid-framework"

// configs
// -----------------------------------------
cor-principal = #fab729
slider-controler = #fab729

// layout
// -----------------------------------------
@import "layout/header"
@import "layout/banner"
@import "layout/footer"
@import "layout/form"

/* entypo */
[class*="entypo-"]:before
	font-family: 'entypo', sans-serif;
	font-size 24px
	font-weight 300



// global
// -----------------------------------------
body
	font-family 'Roboto', sans-serif
	background url('../img/back.png') repeat

.row
	row()

.row-som
	row()
	justify(right)
	margin-bottom 3em

.row2
	background rgba(34, 34, 34, 0.75)
	display flex
	flex-wrap: wrap
	width 100%
	paddin 2em 0
	margin-top 2em
	margin-bottom 2em
	padding-bottom 3em


// div, section, article, footer, nav, header, main
// 	border 1px dashed #4ecb29

// index
// -----------------------------------------
.f-nav
	z-index: 999
	background: rgba(#121212, 0.95)
	position: fixed
	left: 0
	top: 0
	width: 100%
.conteudo-contato
	color #fff
.coluna2
	col(6)
	min-height 300px
	margin-top 2em
.coluna2 h1
	color #fff
	text-align center
.coluna2 p
	col(8)
	color #fff

	margin 0 auto
	display block
	text-align center
.coluna2 span
	color #fff

	margin 0 auto
	display block
	text-align center

.content
	col(10)
	offset(1)
	text-align center
	padding 30px 0
.content img
	display block
	max-width 100%
	height auto


.content p
	color #fff
	line-height 38px
	col(12)
	margin 0 auto
	font-weight 300
	margin-top 2em
.content h2
	color #fff
h1
	font-size 36px
	color #fff
	font-weight 900
	text-align center


h1 span
	display block
	color #fff

.titulo
	color #373737

.photobox
	overflow hidden
	col(4)
	display block
	margin-bottom 55px
	background-size: contain
	background-repeat no-repeat
	background-position center center
	background-image url('../img/btn-zoom.png')
	background-size: 75px



.photobox img
	max-width:100%
	-webkit-transition: all .5s ease-in-out
	-moz-transition: all .5s ease-in-out
	-ms-transition: all .5s ease-in-out
	-o-transition: all .5s ease-in-out
	transition: all .5s ease-in-out

.photobox:hover img
	width:120%
	margin: 0 0 0 0%;
	opacity .2
	transform: scale(1.1);
	-webkit-transition: all .5s ease-in-out
	-moz-transition: all .5s ease-in-out
	-ms-transition: all .5s ease-in-out
	-o-transition: all .5s ease-in-out
	transition: all .5s ease-in-out

.zoom
	display block
	width 280px
	height 75px
.zoom img
	opacity 0
	z-index 999
	position relative
	max-width 280px
	bottom 00px
.zoom img:hover
	opacity 1
.tic-mail
	display block
	padding-left 2em
	background url('../img/tic-mail.png') no-repeat left
	color #fff
	margin 0 auto
	font-size 22px
	margin-top 1em
	margin-left 2.2em
	padding 10px
	font-weight 400
	padding-left 60px
	text-decoration none

.tic-whats
	display block
	padding-left 1em
	background url('../img/tic-whats.png') no-repeat left
	color #fff
	margin 0 auto
	font-size 38px
	margin-left 2.2em
	padding 10px
	font-weight 900
	text-decoration none

.tic-tel
	display block
	padding-left 1em
	background url('../img/tic-tel.png') no-repeat left
	color #fff
	margin 0 auto
	font-size 38px
	margin-left 2.2em
	margin-bottom 1em
	padding 10px
	font-weight 900
	text-decoration none
.tic
	display inline-block
	padding-left 2em
	background url('../img/tic-contato.png') no-repeat left
	color #fff
	margin 0 auto
	font-size 24px
	margin-top 1em
	margin-left 2.2em
	margin-bottom 1em
	padding 30px
	font-weight 900
	text-decoration none
.tic:hover
	color #000

@media screen and (max-width 1255px)
	.coluna
		font-size 18px
@media screen and (max-width 1150px)
	.linha
		display none
	.col-agenda
		col(6)
@media screen and (max-width 820px)
	.coluna2
		col(12)
	.coluna2 span
		padding-left: 3em
	.coluna
		display block
		text-align center
		font-size 18px
	.sound
		margin -37px 10px 0px 130px

@media screen and (max-width 768px)
	.photobox
		background-size: 180px
	.data
		font-size 36px

@media screen and (max-width 635px)
	.content
		col(12)
	.coluna2 span
		font-size 14px
	.photobox
		col(6)
	.sound img
		width 38px
		height 39px
		margin-top 10px
@media screen and (max-width 480px)
	.photobox
		background-size: 130px
	.coluna2 p
		col(12)
	.tic-mail
		font-size: 16px;
		padding: 10px 10px 10px 35px;
	.tic
		margin: 1em auto 1em 0.2em;
	.tic-whats
		font-size: 30px;
	.tic-tel
		font-size: 30px;
	.sound
		margin -37px 10px 0px 0px !important
