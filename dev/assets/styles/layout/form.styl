.form {
	width: 100%;
	text-align: left;
	max-width:500px;
	margin:0 auto;
	margin-bottom 30px
}

.label {
	margin: 5px 1%;
  display: block;
  font-size: 20px;
}

.input-text {
  margin: 5px 1% ;
  border: 0;
  width: 100%;
  height: 50px;
  text-indent: 10px;
  color: #636363
  border: 1px solid #ccc;
  font-size: 14px;
	-webkit-border-radius: 12px;
	-moz-border-radius: 12px;
	border-radius: 12px;
}

.required
	color: cor-principal

.textarea {
	width:98%;
	padding: 10px;
  height:140px;
	border:0;
	margin: 5px 1%;
	resize: vertical;
  color:#3A3939;
  border: 1px solid #ccc;
  font-size: 14px;
	-webkit-border-radius: 12px;
	-moz-border-radius: 12px;
	border-radius: 12px;
}

.btn {
	border: 0;
	background: cor-principal
	color: #000;
	padding: 15px 30px;
	font-weight 700
	margin-top: 2em;
	display block
  font-size:16px;
	margin 0 auto
	margin-top 20px
	float right
  -webkit-transition: background.2s;
  transition: background .2s;
	-webkit-border-radius: 10px;
	-moz-border-radius: 10px;
	border-radius: 10px;
}

.btn:hover {
	background #e19900
	color: #000;
	font-weight 700
}

.btn2 {
	border: 0;
	background: #d8de3f
	color: #06917f;
	padding: 15px 30px;
	margin-top: 0em;
	display inline-block
  font-size:16px;
	margin 0 auto
  -webkit-transition: opacity.2s;
  transition: opacity .2s;
}

.btn2:hover {
	opacity: .7;
	color: #06917f;
}
