//logo
.logo-container
	col(4)
	display flex
	vertical-align(middle)
	justify(center)

.logo-container img
	max-width 100%
	height auto
	display block
.logo-container h1
	padding 20px
.topo
	position relative
	width 100%
	z-index 2
	background url('../img/01.jpg') no-repeat center top
	background-size cover
	min-height 556px
	border-top 10px solid #fc9700
