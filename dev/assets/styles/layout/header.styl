	.menu ul li a
		font-size 12px

	.menu ul li
		margin-left 0.7em

@media screen and (max-width 810px)

	.logo-container
		col(12)
	.menu
		col(12)
	.coluna2
		col(12)
	.menu ul
		margin 0 auto
		display block

@media screen and (max-width 612px)
	.menu ul li
		col(6)
		text-align center

	.face
		display none !important
	.insta
		display none !important
	.video
		display none !important

	a.entypo-facebook-circled:before
		display none

	a.entypo-soundcloud:before
		display none

	a.entypo-video:before
		display none
